generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model blog {
  id                 String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name               String
  creation_timestamp DateTime @db.Timestamp(6)
  creator_id         String   @db.Uuid
  creator            creator  @relation(fields: [creator_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  post               post[]
}

model creator {
  id    String  @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  email String  @unique @db.VarChar
  name  String? @db.VarChar
  blog  blog[]
}

model post {
  id                  Int      @id @default(autoincrement())
  title               String
  content             String
  creation_timestamp  DateTime @db.Timestamp(6)
  last_edit_timestamp DateTime @db.Timestamp(6)
  blog_id             String   @db.Uuid
  blog                blog     @relation(fields: [blog_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
